{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "plugins": [
    "chai-friendly"
  ],
  "rules": {
    "no-param-reassign": 0,
    "no-console": 0,
    "no-underscore-dangle": ["error", { "allow": ["_data"] }],
    "no-unused-vars": ["error", { "args": "none"}],
    "no-unused-expressions": 0,
    "chai-friendly/no-unused-expressions": 2,
    "max-len": ["error", { "code": 250 }],
    "no-undef": 0
  }
}
